<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        tools:context="com.example.rita_ola.sens.MainActivity">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin">


        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_top_margin"
            android:text="Steps"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/tv_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_above="@+id/tv_infoCal"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/tv_info"
            android:layout_marginEnd="22dp"
            android:text="0"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tv_infoCal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_info"
            android:layout_marginTop="@dimen/default_top_margin"
            android:text="Calories"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/tv_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_infoCal"
            android:layout_alignStart="@+id/tv_steps"
            android:gravity="center"
            android:text="0"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/donut"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_below="@id/tv_infoCal"
            android:layout_marginTop="@dimen/default_top_margin"
            app:srcCompat="@drawable/donat" />

        <TextView
            android:id="@+id/count_donut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_calories"
            android:layout_alignTop="@+id/donut"
            android:gravity="center"
            android:text="0"
            android:textSize="40dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="14dp">

        </FrameLayout>


    </RelativeLayout>

</ScrollView>